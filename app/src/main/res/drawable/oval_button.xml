<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" /> <!-- Transparent background -->

    <!-- Define the border properties -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black" /> <!-- Black border -->

    <!-- This makes the shape oval -->
    <corners android:radius="9999dp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
